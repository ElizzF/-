/* pages/game/game.wxss */

.top_bar {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.min_step {
  margin-bottom: 15rpx;
}
.restart {
  align-items: center;
}

.contain {
  border: 20rpx solid rgba(218,218,220);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-content: space-between;
  overflow: hidden;
  margin: 0 auto;
  background: #fff;
}

.bt_restart {
  background-color: rgb(223, 53, 53);
  border-color: rgb(219, 182, 182);
  box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 6px 0px;
  font-size: 30rpx;
  color: white;
}

.problem {
    border-color: rgb(219, 182, 182);
    box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 6px 0px;
    font-size: 30rpx;
    opacity: 0.8;
    margin-top: 12rpx;
}


.index_count {
  margin-top: -25rpx;
  margin-bottom: 20rpx;
  display: flex;
  margin-left: 40rpx;
}
.time_count {
  border-color: rgb(187, 187, 187);
  border-width: 1px;
  border-style: solid;
  box-shadow: rgba(0, 0, 0, 0.4) 6px 2px 6px 0px;
  border-radius: 4px;
  font-size: 14px;
  height: 33rpx;
  line-height: 33rpx;
  width: 200rpx;
  padding: 10rpx;  
  text-align: center;
}
.step_count {
  margin-left: 60rpx;
  border-color: rgb(187, 187, 187);
  border-width: 1px;
  border-style: solid;
  box-shadow: rgba(0, 0, 0, 0.4) 6px 2px 6px 0px;
  border-radius: 4px;
  font-size: 14px;
  height: 33rpx;
  line-height: 33rpx;
  width: 130rpx;
  padding: 10rpx; 
  text-align: center;
}
